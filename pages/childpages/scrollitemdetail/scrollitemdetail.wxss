/* pages/childpages/scrollitemdetail/scrollitemdetail.wxss */
.scrollitemdetail-content{
	overflow: hidden;
	background: #f6f6f6;
}
.shopping-logo{
	border-radius: 26rpx;
	padding: 38rpx;
	box-sizing: border-box;
	display: flex;
	flex-wrap: wrap;
	justify-content: flex-start;
	margin-top: 20rpx;
	background: #fff;
}
.shopping-logo-item{
	height: 171rpx;
	width: 337rpx;
	border-right: 1rpx solid #f5f5f5;
	border-bottom: 1rpx solid #f5f5f5;
	box-sizing: border-box;
	display: flex;
}
.shopping-logo-item:nth-child(2n){
	border-right: 0;
	padding-left: 35rpx;
	width: 302rpx;
}
.shopping-logo-item:nth-last-child(1), .shopping-logo-item:nth-last-child(2){
	border-bottom: 0;
}
.shopping-logo-item-left{
	width: 189rpx;
	margin-top: 34rpx;
}
.shopping-logo-item-right{
	width: 106rpx;
	height: 106rpx;
	margin-top: 34rpx;
}
.shopping-logo-item-left-title{
	text-align: center;
	margin-top: 20rpx;
	font-size: 27rpx;
	font-weight: bold;
}
.shopping-logo-item-left-desction{
	text-align: center;
	margin-top: 8rpx;
	font-size: 29rpx;
	color: #6f6f6f;
}
.nearb-shops{
	border-radius: 26rpx;
	margin-top: 20rpx;
	background: #fff;
	box-sizing: border-box;
	padding-top: 26rpx;
}