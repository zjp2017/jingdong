/* components/horizontalgoods/HorizontalGoods.wxss */
.shop-list-box{
	height: 180rrpx;
	display: flex;
}
.shop-list-box-item{
	width: 129rpx;
	height: 180rpx;
	margin: 0 9rpx;
	position: relative;
}
.shop-list-box-item:nth-child(1){
	margin-left: 0;
}
.shop-list-box-item-img-warp{
	width: 129rpx;
	height: 129rpx;
	border:1px solid #fafafa;
	box-sizing: 1px solid 4rpx;
}
.shop-list-box-item-img{
	width: 100%;
}
.shop-list-box-item-price{
	font-size: 24rpx;
	text-align: center;
	color: #fa393c;
	margin-top: 18rpx;
}
.shop-list-item{
	margin-top: 10rpx;
}
.shop-list-box-item-desc-tips{
	position: absolute;
	top: 0;
	left: 0;
	height: 30rpx;
	line-height: 30rpx;
	text-align: center;
	font-size: 23rpx;
	color: #fff;
	padding:  0 6rpx;
	background: linear-gradient(135deg, rgb(255, 127, 127) 0%, rgb(255, 81, 56) 100%);
	border-radius: 14rpx 0 14rpx 0;
}