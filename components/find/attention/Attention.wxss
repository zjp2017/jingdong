/* components/find/attention/Attention.wxss */
.attention-item{
	background: #ffffff;
	border-radius: 18rpx;
	padding: 30rpx 20rpx;
}
.attention-item-header{
	height: 82rpx;
	display: flex;
}
.a-item-header-left, .a-item-header-img{
	height: 82rpx;
	width: 82rpx;
}
.a-item-header-img{
	border-radius: 50%;
}
.a-item-header-right{
	width: 589rpx;
	height: 82rpx;
	box-sizing: border-box;
	padding: 0 0 0 18rpx;
}
.a-item-header-right-title{
	height: 47rpx;
	font-size: 28rpx;
	line-height: 47rpx;
}
.a-item-header-right-time{
	height: 26rpx;
	font-size: 24rpx;
	line-height: 26rpx;
	color: #999999;
}
.attention-item-desc{
	margin-top: 13rpx;
	line-height: 40rpx;
	font-size: 30rpx;
	color: #666666;
	padding-bottom: 10rpx;
}
.attention-item-list-box{
	margin-top: 10rpx;
	overflow: hidden;
}
.attention-item-list-item{
	float: left;
	margin: 9rpx 5rpx;
}
.attention-item-list-item:nth-child(3n){
	margin-left: 0;
}
.attention-item-product-img{
	width: 100%;
	margin-top: 10rpx;
}
