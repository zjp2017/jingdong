	<view class="commodity-box">
		<view class="commodity-title">门店电话</view>
		<view class="commodity-num active" bindtap="makePhone">13691832815</view>
	</view>
	<!--  -->
	<view class="commodity-box">
		<view class="commodity-title">商家资质</view>
		<view class="commodity-num active">去看看</view>
	</view>
</view>
