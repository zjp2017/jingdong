/* components/childpages/supermarket/suepermarrketscroll/SuepermarrketScroll.wxss */
.suepermarrketscroll{
	height: 132rpx;
	display: flex;
	justify-content: flex-start;
	padding: 0 18rpx;
	box-sizing: border-box;
	margin-top: 50rpx;
	margin-bottom: 10rpx;
}
.suepermarrketscroll-item{
	position: relative;
	width: 144rpx;
	height: 132rpx;
}
.shop-list-box-item-desc-tips{
	position: absolute;
	top: 0;
	left: 0;
	height: 30rpx;
	line-height: 30rpx;
	text-align: center;
	font-size: 23rpx;
	color: #fff;
	padding: 0 6rpx;
	background: linear-gradient(135deg, rgb(255, 127, 127) 0%, rgb(255, 81, 56) 100%);
	border-radius: 14rpx 0 14rpx 0;
}
.suepermarrketscroll-item-img{
	width: 90rpx;
	height: 90rpx;
	margin-left: 27rpx;
}
.suepermarrketscroll-item-text{
	font-size: 25rpx;
	color:  #7c7c7c;
	text-align: center;
	margin-top: 5rpx;
}