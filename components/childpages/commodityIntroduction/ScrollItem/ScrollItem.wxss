/* components/childpages/commodityIntroduction/ScrollItem/ScrollItem.wxss */
.ScrollItem{
	margin-right: 20rpx;
	width: 204rpx;
	height: 380rpx;
	display: inline-block;
}
.ScrollItem-img-box{
	width: 100%;
	height: 204rpx;
	position: relative;
}
.ScrollItem-img{
	width: 100%;
	height: 204rpx;
}
.ScrollItem-img-label{
	position: absolute;
	left: 0;
	bottom: 0;
	width: 122rpx;
	height: 30rpx;
	border-radius: 0 10rpx 0 10rpx;
	color: #fff;
	font-size: 20rpx;
	text-align: center;
}
.ScrollItem-img-label.discount{
	background: linear-gradient(135deg, rgb(255, 200, 55) 0%, rgb(255, 150, 51) 100%);
}
.ScrollItem-img-label.rush-to-buy{
	background: linear-gradient(135deg, rgb(255, 125, 125) 0%, rgb(255, 81, 56) 100%);
}
.ScrollItem-img-label.reduction{
	background: linear-gradient(135deg, rgb(85, 216, 94) 0%, rgb(72, 193, 81) 100%);
}
.ScrollItem-title{
	 color: rgb(51,51,51);
	font-size: 24rpx;
	-webkit-line-clamp:2;
	height: 66rpx;
	width:100%;
	line-height: 32rpx;
	text-align: left;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical; 

}