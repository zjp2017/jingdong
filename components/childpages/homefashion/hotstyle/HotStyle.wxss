/* components/childpages/homefashion/hotstyle/HotStyle.wxss */

.hotstyle-box{
	background: #fff;
	border-radius: 13rpx;
	margin-top: 23rpx;
	display: flex;
	justify-content: flex-start;
	flex-wrap: wrap;
	padding: 10rpx 10rpx;
}
.hotstyle-item{
	width: 230rpx;
	height: 380rpx;
	position: relative;
	margin-top: 15rpx;
}
.hotstyle-main-img{
	width: 210rpx;
	height: 210rpx;
}
.hotstyle-item-logo{
	width: 48rpx;
	height: 48rpx;
	position: absolute;
	left: 0;
	top: 0;
}
.hotstyle-item-title{
	color: #000;
	font-size: 22rpx;
	height: 64rpx;
	width: 209rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	/* 几行后显示省略号 */
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	line-height: 35rpx;
}
.hotstyle-item-price{
	color: rgb(255, 87, 87);
	font-size: 24rpx;
	font-weight: bold;
	margin-top: 10rpx;
}
.hotstyle-item-origin-price{
	color: rgb(153, 153, 153);
	font-size: 20rpx;
	text-decoration: line-through;
}